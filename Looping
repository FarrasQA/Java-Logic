package org.example;

public class TestLooping {
    public static void main(String[] args) {

        //forlooping();
        whilelooping();
    }

    static void forlooping() {
        System.out.println("Case For Looping");

        for (int i = 1; i <= 3; i++) {
            System.out.println("Input PIN ATM salah " + i + " kali");
        }
        System.out.println("Rekening diblokir. Silahkan hubungi call center Bank.");
    }
    static void whilelooping() {
        System.out.println("Case While Looping");

        int i = 1;
        while (i <= 6) {
            System.out.println("Username salah " + i + " kali");
            i++;
        }
        System.out.println("Silahkan coba lagi");
    }
}
